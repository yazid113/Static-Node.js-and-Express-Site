extends layout.pug

block content

  article.portfolio-intro

    
    h1 Welcome to my portfolio
    
   
    p Checkout all the projects I have done during my techdegree as a Javascript Full Stack


  article.portfolio-project-thumbs
    .projects-box.box.grid

      
      each project in projects
        
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`${project.images_url[0]}`, alt='')
            h5= project.project_name

